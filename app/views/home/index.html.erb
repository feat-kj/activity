<!-- Page Content -->
<div class="container">

  <h1 class="my-4">Welcome to Modern Business</h1>

  <!-- Portfolio Section -->
  <h2>Portfolio Heading</h2>

  <div class="row">
    <% @recentlies.each do |event| %>
    <div class="col-lg-4 col-6 portfolio-item">
      <div class="card h-100">
        <a href="#"><img class="card-img-top" src="<%= event_image_url(event.dig("mng","refbase"), event.dig("views", 0, "fid")) %>" alt=""></a>
        <div class="card-body">
          <h4 class="card-title">
            <a href="#"><%= event.dig('name', 'name1', 'written') %></a>
          </h4>
          <p class="card-text">
            <%= event.dig("descs", 0, "body") %>
          </p>
        </div>
      </div>
    </div>
    <hr>
    <% end %>
  </div>
  <!-- /.row -->
  <hr>

  <!-- Project One -->
  <div class="row">
    <% @populars.each do |event| %>
    <div class="col-md-2 col-7">
      <a href="#">
        <img class="img-fluid rounded mb-3 mb-md-0" src="<%= event_image_url(event.dig("mng","refbase"), event.dig("views", 0, "fid")) %>" alt="">
      </a>
    </div>
    <div class="col-md-2 col-5">
      <h3><%= event.dig('name', 'name1', 'written') %></h3>
      <p><%= event.dig("descs", 0, "body") %></p>
      <a class="btn btn-primary" href="#">View Project
        <span class="glyphicon glyphicon-chevron-right"></span>
      </a>
    </div>
    <% end %>
  </div>
  <!-- /.row -->
  <hr>

  <div class="row">
    <div class="col-lg-6 col-12 portfolio-item">
