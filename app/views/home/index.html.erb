          <h4 class="card-title">
            <a href="#"><%= @features_main.dig("descs", 0, "body") %></a>
          </h4>
          <p class="card-text"><%= @features_main.dig("descs", 0, "body") %></p>
        </div>
      </div>
    </div>
    <div class="col-lg-6 col-12">

      <div class="row">
        <% @features.each do |event| %>
        <div class="col-lg-12 col-6">
          <div class="row">
            <div class="col-lg-7 col-12">
            <a href="#">
              <img class="img-fluid rounded mb-3 mb-md-0" src="<%= event_image_url(event.dig("mng","refbase"), event.dig("views", 0, "fid")) %>" alt="">
            </a>
            </div>
            <div class="col-lg-5 col-12">
              <h3><%= event.dig('name', 'name1', 'written') %></h3>
              <p><%= event.dig("descs", 0, "body") %></p>
              <a class="btn btn-primary" href="#">View Project
                <span class="glyphicon glyphicon-chevron-right"></span>
              </a>
            </div>
          </div>
        </div>
        <hr>
        <% end %>
      </div>
    </div>
